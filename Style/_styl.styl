body
    color black
    
h1, h2
    text-align center
    font-family 'Marcellus SC', serif
    
.container
    max-width 1200px
    margin 0 auto
    padding 50px 10px
    
.loadingScreen
    background-color black
    position absolute
    top 0
    height 100%
    width 100%
    z-index 10
    font-size 48px
    padding-top 25%
    color white
    text-align center
    overflow hidden
    
.caracterPreview
    border 1px #191919 solid
    padding 5px
    margin 10px 0
    
.overlay
    display hidden
    position absolute
    width 100%
    z-index 10
    &__content
        position fixed
        background white
        width 60%
        height 80%
        margin 5% 20%
        z-index 11
        overflow-y scroll
    &--dark
        position fixed
        background black
        width 100%
        height 100%
        display block
        opacity 0.5
        display block
        padding 50px 0
        z-index 10
        
.tiles
    border 1px solid black
    
.game
    &__tile
        height 50px 
        border 1px solid black
        
.col-2, .col-sm-12, .row
    margin 0
    padding 0
    
.col-xs-1-10, .col-sm-1-10, .col-2-10
    position relative
    min-height 1px

.col-xs-1-10 
    width 10%
    float left
    
.col-2-10
    width 20%
    float left

@media (min-width: 768px)
    h1
        color black
        
@media (min-width: 992px)
    h1
        color black
    
@media (min-width: 1200px)
    h1
        color black
