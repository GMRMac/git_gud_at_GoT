body
    color black
    
h1, h2, h3, h4, button
    text-align center
    font-family 'Marcellus SC', serif

button
    background none
    border none
    font-size 20px
    display block
    margin 30px auto
    &:hover
        text-decoration underline

.monsterImage
    height 90%
    margin 5%
        
.button
    &--arrows
        height 22px
        position relative
        top -2px
    &--dice
        height 48px
        position relative
        top -2px
        margin 5px 20px
    
.container
    max-width 1200px
    margin 0 auto
    padding 50px 10px
    
.loadingScreen
    background-color black
    position absolute
    top 0
    height 100%
    width 100%
    z-index 10
    font-size 48px
    padding-top 25%
    color white
    text-align center
    overflow hidden
    
.characterPreview
    border 1px #191919 solid
    padding 5px
    margin 10px 0
    &__button
        background none
        border 0
        font-size 18px
        display block
        margin 0 auto
        text-decoration underline
    &__image
        width 60%
        margin 25px 20%
    
.selectedPicture
    display block
    max-width 300px
    margin 15px auto
    
.overlay
    display hidden
    position absolute
    width 100%
    z-index 10
    &__content
        position fixed
        background white
        display block
        width 40%
        height 80%
        margin 5% 30%
        z-index 11
        overflow-y scroll
    &--dark
        position fixed
        background black
        width 100%
        height 100%
        display block
        opacity 0.5
        display block
        padding 50px 0
        z-index 10

.characterInformation
    div
        display flex
        height 48px
        justify-content center
    &--img
        height 32px
        width 32px
        padding 2px
        border 1px solid black
        border-radius 100%
        margin 0 4px
        &__active
            border 1px solid red !important
    
#heroImage
    position absolute
    top 0px
    height 35%
    border-radius 100%
    margin 7.5%
    
#enemyImage
    position absolute
    bottom 0px
    height 35%
    border-radius 100%
    margin 7.5%
    
.game
    &__tile
        height 100px 
        background-image url("../Media/Graph/tile_middle.png")
        background-position center
        background-repeat no-repeat
        background-size cover

#game
    &__container
        justify-content center
    &__log
        border 1px solid black
        height 510px
        overflow-y scroll
    &__button--container
        display block
        height 60px
        
#tile-
    &1, &11, &21
        background-image url("../Media/Graph/tile_left_up.png")!important
        background-position center
        background-repeat no-repeat
        background-size cover     
        
#tile-
    &10, &20, &30
        background-image url("../Media/Graph/tile_left_down.png")!important
        background-position center
        background-repeat no-repeat
        background-size cover    
        
#tile-
    &5, &15, &25
        background-image url("../Media/Graph/tile_right_down.png")!important
        background-position center
        background-repeat no-repeat
        background-size cover
        
#tile-
    &6, &16, &26
        background-image url("../Media/Graph/tile_right_up.png")!important
        background-position center
        background-repeat no-repeat
        background-size cover
        
.col-2, .col-sm-12, .row
    margin 0
    padding 0
    
.col-xs-1-10, .col-sm-1-10, .col-2-10
    position relative
    min-height 1px

.col-xs-1-10 
    width 10%
    float left
    
.col-2-10
    width 20%
    float left

@media (min-width: 768px)
    h1
        color black
        
@media (min-width: 992px)
    h1
        color black
    
@media (min-width: 1200px)
    h1
        color black
